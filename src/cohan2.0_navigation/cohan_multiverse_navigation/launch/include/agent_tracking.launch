<launch>
  <arg name="ns" default=""/>
  <arg name="num_agents" default="1"/>

  <!-- ****************************************************************************** -->
  <!-- *         Two different settings to avoid '/' in tf2 frames                  * -->
  <!-- ****************************************************************************** -->

  <!-- Without namespace -->
  <group if="$(eval ''==arg('ns'))">
    <!-- Sim agents to /tracked_agents -->
    <node name="agents" pkg="cohan_multiverse_navigation" type="agents_bridge.py" args="$(arg num_agents)" output="screen"/>

    <!-- agent pose prediction, for the local-planning -->
    <node pkg="agent_path_prediction" type="agent_path_predict" name="agent_path_predict" output="screen" >
      <param name="goals_file" value="$(find agent_path_prediction)/cfg/goals_adream.yaml"/>
    </node>

    <!-- Filter the agents from laser scan -->
    <!-- This transform is needed as the agent filter looks for base_laser_link -->
    <node pkg="tf" type="static_transform_publisher" name="base_laser_link_tf" args="0 0 0 0 0 0 /laser_mount /base_laser_link 20"/>
    <node pkg="cohan_layers" type="agent_filter.py" name="agent_laser_filter" output="screen"
        args="$(arg ns)" launch-prefix="bash -c 'sleep 1.0; $0 $@' ">
      <remap from="base_scan" to="laser_scan"/>
    </node>

  </group>

  <!-- With namespace -->
  <group unless="$(eval ''==arg('ns'))">
    <!-- Sim agents to /tracked_agents -->
    <node name="agents" pkg="cohan_multiverse_navigation" type="agents_bridge.py" args="$(arg num_agents) $(arg ns)" output="screen"/>

    <!-- agent pose prediction, for the local-planning -->
    <node pkg="agent_path_prediction" type="agent_path_predict" name="agent_path_predict" output="screen" >
      <param name="ns" value="$(arg ns)"/>
      <remap from="map" to="/map"/>
      <param name="~robot_frame_id" value="$(arg ns)/base_footprint"/>
      <param name="goals_file" value="$(find agent_path_prediction)/cfg/goals_adream.yaml"/>
    </node>

    <!-- Filter the agents from laser scan -->
    <!-- This transform is needed as the agent filter looks for base_laser_link -->
    <node pkg="tf" type="static_transform_publisher" name="base_laser_link_tf" args="0 0 0 0 0 0 /laser_mount /base_laser_link 20"/>
    <node pkg="cohan_layers" type="agent_filter.py" name="agent_laser_filter" output="screen"
        args="$(arg ns)" launch-prefix="bash -c 'sleep 1.0; $0 $@' ">
      <remap from="base_scan" to="laser_scan"/>
    </node>
  </group>

</launch>
