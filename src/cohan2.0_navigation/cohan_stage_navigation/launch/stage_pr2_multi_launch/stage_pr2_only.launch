<launch>
  <arg name="map_name" default="laas_adream"/>
  <arg name="localize" default="fake"/>
  <arg name="gui" default="false"/>
  <arg name="fast_mode" default="false"/>
  <arg name="node_start_delay" default="4.0"/>
  <arg name="num_agents" default="2"/>
  <arg name="robot_planner" default="cohan"/>

  <!-- Stage simulator and robot robot description -->

    <include file="$(find stage_ros)/launch/stage_pr2_world.launch">
      <arg name="fast_mode" value="$(arg fast_mode)"/>
      <arg name="world_file" value="laas"/>
      <arg name="gui" value="$(arg gui)" unless="$(arg fast_mode)"/>
    </include>


  <!-- start map_server with laas_adream map -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find cohan_stage_navigation)/maps/laas_adream_stage.yaml" if="$(eval 'laas_adream'==arg('map_name'))"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find cohan_stage_navigation)/maps/maze.yaml" if="$(eval 'maze'==arg('map_name'))"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find cohan_stage_navigation)/maps/open_space.yaml" if="$(eval 'open_space'==arg('map_name'))"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find cohan_stage_navigation)/maps/mall.yaml" if="$(eval 'mall'==arg('map_name'))"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find cohan_stage_navigation)/maps/simple_junction.yaml" if="$(eval 'simple_junction'==arg('map_name'))"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find cohan_stage_navigation)/maps/junctions.yaml" if="$(eval 'junctions'==arg('map_name'))"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find cohan_stage_navigation)/maps/hospital.yaml" if="$(eval 'hospital'==arg('map_name'))"/>

  <include file="$(find cohan_stage_navigation)/launch/stage_pr2_multi_launch/include/robot_only.launch">
    <arg name="node_start_delay" value="$(arg node_start_delay)" />
    <arg name="localize" value="$(arg localize)"/>
    <arg name="num_agents" value="$(arg num_agents)"/>
    <arg name="robot_planner" value="$(arg robot_planner)"/>
  </include>

  <!-- Rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find cohan_stage_navigation)/rviz/cohan_nav_stage.rviz" />
</launch>
